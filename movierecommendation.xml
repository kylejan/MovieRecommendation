<?xml version="1.0" encoding="UTF-8"?>
<project name="movierecommendation" default="all">
  
  
  <property file="movierecommendation.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/htmlconverter.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module MovieRecommendation -->
  
  <dirname property="module.movierecommendation.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.movierecommendation" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.movierecommendation" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.movierecommendation" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.movierecommendation" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="movierecommendation.output.dir" value="${module.movierecommendation.basedir}/out/production/MovieRecommendation"/>
  <property name="movierecommendation.testoutput.dir" value="${module.movierecommendation.basedir}/out/test/MovieRecommendation"/>
  
  <path id="movierecommendation.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="movierecommendation.module.production.classpath">
    <path refid="${module.jdk.classpath.movierecommendation}"/>
    <fileset dir="/opt/hadoop/share/hadoop/common">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/hdfs">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/mapreduce">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/yarn">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/common/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="movierecommendation.runtime.production.module.classpath">
    <pathelement location="${movierecommendation.output.dir}"/>
    <fileset dir="/opt/hadoop/share/hadoop/common">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/hdfs">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/mapreduce">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/yarn">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/common/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="movierecommendation.module.classpath">
    <path refid="${module.jdk.classpath.movierecommendation}"/>
    <pathelement location="${movierecommendation.output.dir}"/>
    <fileset dir="/opt/hadoop/share/hadoop/common">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/hdfs">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/mapreduce">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/yarn">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/common/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="movierecommendation.runtime.module.classpath">
    <pathelement location="${movierecommendation.testoutput.dir}"/>
    <pathelement location="${movierecommendation.output.dir}"/>
    <fileset dir="/opt/hadoop/share/hadoop/common">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/hdfs">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/mapreduce">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/yarn">
      <patternset refid="library.patterns"/>
    </fileset>
    <fileset dir="/opt/hadoop/share/hadoop/common/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <patternset id="excluded.from.module.movierecommendation">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.movierecommendation">
    <patternset refid="excluded.from.module.movierecommendation"/>
  </patternset>
  
  <path id="movierecommendation.module.sourcepath">
    <dirset dir="${module.movierecommendation.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.movierecommendation" depends="compile.module.movierecommendation.production,compile.module.movierecommendation.tests" description="Compile module MovieRecommendation"/>
  
  <target name="compile.module.movierecommendation.production" depends="register.custom.compilers" description="Compile module MovieRecommendation; production classes">
    <mkdir dir="${movierecommendation.output.dir}"/>
    <javac2 destdir="${movierecommendation.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.movierecommendation}/javac">
      <compilerarg line="${compiler.args.movierecommendation}"/>
      <bootclasspath refid="movierecommendation.module.bootclasspath"/>
      <classpath refid="movierecommendation.module.production.classpath"/>
      <src refid="movierecommendation.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.movierecommendation"/>
    </javac2>
    
    <copy todir="${movierecommendation.output.dir}">
      <fileset dir="${module.movierecommendation.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.movierecommendation.tests" depends="register.custom.compilers,compile.module.movierecommendation.production" description="compile module MovieRecommendation; test classes" unless="skip.tests"/>
  
  <target name="clean.module.movierecommendation" description="cleanup module">
    <delete dir="${movierecommendation.output.dir}"/>
    <delete dir="${movierecommendation.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.movierecommendation" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.movierecommendation" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.movierecommendation" value="${basedir}/out/artifacts/MovieRecommendation"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.MovieRecommendation.jar" value="${artifacts.temp.dir}/MovieRecommendation.jar"/>
  </target>
  
  <target name="artifact.movierecommendation" depends="init.artifacts, compile.module.movierecommendation" description="Build &#39;MovieRecommendation&#39; artifact">
    <property name="artifact.temp.output.movierecommendation" value="${artifacts.temp.dir}/MovieRecommendation"/>
    <mkdir dir="${artifact.temp.output.movierecommendation}"/>
    <jar destfile="${temp.jar.path.MovieRecommendation.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${movierecommendation.output.dir}"/>
    </jar>
    <copy file="${temp.jar.path.MovieRecommendation.jar}" tofile="${artifact.temp.output.movierecommendation}/MovieRecommendation.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.movierecommendation" description="Build all artifacts">
    <mkdir dir="${artifact.output.movierecommendation}"/>
    <copy todir="${artifact.output.movierecommendation}">
      <fileset dir="${artifact.temp.output.movierecommendation}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>